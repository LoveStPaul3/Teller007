<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <fragment
            android:id="@+id/lclk_record_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="cn.leancloud.leancloudlivekit.record.LCLKRecordFragment"/>
    </ScrollView>

    <fragment
        android:id="@+id/lclk_im_fragment"
        android:name="cn.leancloud.leancloudlivekit.im.LCLKIMFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>