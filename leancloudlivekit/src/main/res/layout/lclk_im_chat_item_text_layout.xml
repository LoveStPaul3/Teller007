<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingBottom="2dp"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="2dp">

    <cn.leancloud.leancloudlivekit.im.LCLKRoundCornerImageView
        android:id="@+id/im_chat_item_text_avatar_view"
        android:layout_width="@dimen/lclk_im_chat_item_avatar_width"
        android:layout_height="@dimen/lclk_im_chat_item_avatar_width"
        android:src="@mipmap/lclk_default_avatar_icon"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/lclk_im_item_content_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/im_chat_item_text_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@color/lclk_im_chat_item_name_color"
            android:textSize="@dimen/lclk_textsize_smaller"/>

        <TextView
            android:id="@+id/im_chat_item_text_content_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="content"
            android:textColor="@color/lclk_im_chat_item_content_color"
            android:textSize="@dimen/lclk_textsize_smaller"/>
    </LinearLayout>
</LinearLayout>