<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/lclk_im_barrage_item_width"
                android:orientation="vertical">

    <TextView
        android:layout_width="140dp"
        android:layout_height="@dimen/lclk_im_barrage_item_width"
        android:layout_marginLeft="20dp"
        android:background="@drawable/lclk_barrage_item_bg"/>

    <cn.leancloud.leancloudlivekit.im.LCLKRoundCornerImageView
        android:id="@+id/live_barrage_item_avatar_view"
        android:layout_width="@dimen/lclk_im_barrage_avatar_width"
        android:layout_height="@dimen/lclk_im_barrage_avatar_width"/>

    <TextView
        android:id="@+id/live_barrage_item_name_view"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/live_barrage_item_avatar_view"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/lclk_textsize_small"/>

    <TextView
        android:id="@+id/live_barrage_item_content_view"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/live_barrage_item_name_view"
        android:layout_toRightOf="@+id/live_barrage_item_avatar_view"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/lclk_textsize_small"/>
</RelativeLayout>