<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LCLKAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/lclk_color_primary</item>
        <item name="colorPrimaryDark">@color/lclk_color_primary_dark</item>
        <item name="colorAccent">@color/lclk_color_accent</item>
    </style>

    <style name="LCLKActivity" parent="LCLKAppTheme"/>

    <style name="LCLKActivity.NoActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LCLKActionBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="LCLKActivity.FullScreen" parent="LCLKActivity.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="LCLKBottomDialog" parent="@style/LCLKAppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/lclk_live_gift_dialog_height</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <!-- Text -->
    <style name="LCLKTextAppearance"/>

    <style name="LCLKTextAppearance.Large">
        <item name="android:textSize">@dimen/lclk_textsize_large</item>
    </style>

    <style name="LCLKTextAppearance.Normal">
        <item name="android:textSize">@dimen/lclk_textsize_normal</item>
    </style>

    <style name="LCLKTextAppearance.Normal.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LCLKTextAppearance.Small">
        <item name="android:textSize">@dimen/lclk_textsize_small</item>
    </style>

    <style name="LCLKTextAppearance.Smaller">
        <item name="android:textSize">@dimen/lclk_textsize_smaller</item>
    </style>


    <!-- Avatar -->
    <style name="LCLKAvatar">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:scaleType">centerCrop</item>
        <!--<item name="android:src">@drawable/chat_default_user_avatar</item>-->
    </style>

    <style name="LCLKAvatar.Large">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="LCLKAvatar.Small">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
</resources>