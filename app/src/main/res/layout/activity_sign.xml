<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.zxzhu.show.view.SignActivity">

        <include layout="@layout/bar"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/icon_sign"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/defult_head"
            android:onClick="setIcon"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:padding="10dp"
                android:src="@drawable/usernaem"/>

            <EditText
                android:id="@+id/username_edit_sign"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:hint="请输入用户名"
                android:maxLines="1"
                android:textColor="@color/textLight"
                android:textColorHint="@color/textLight"
                android:textSize="@dimen/app_text_size_medium"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:padding="10dp"
                android:src="@drawable/password"/>

            <EditText
                android:id="@+id/password_edit_sign"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:inputType="textPassword"
                android:hint="请输入用密码"
                android:maxLines="1"
                android:textColor="@color/textLight"
                android:textColorHint="@color/textLight"
                android:textSize="@dimen/app_text_size_medium"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:padding="10dp"
                android:src="@drawable/phone"/>

            <EditText
                android:id="@+id/phone_edit_sign"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:hint="请输入手机号"
                android:maxLines="1"
                android:textColor="@color/textLight"
                android:textColorHint="@color/textLight"
                android:textSize="@dimen/app_text_size_medium"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:padding="10dp"
                android:src="@drawable/readme"/>

            <EditText
                android:id="@+id/readme_edit_sign"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:hint="一句话让大家了解下你吧"
                android:maxLines="1"
                android:textColor="@color/textLight"
                android:textColorHint="@color/textLight"
                android:textSize="@dimen/app_text_size_medium"/>
        </FrameLayout>

        <Button
            android:id="@+id/btn_sign"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:background="@drawable/button_orange"
            android:onClick="signClick"
            android:text="join us"
            android:textColor="@color/md_white_1000"/>
    </LinearLayout>
</layout>