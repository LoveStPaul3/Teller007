<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.zxzhu.show.view.ChangePasswordActivity">

        <include layout="@layout/bar"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:padding="10dp"
                android:src="@drawable/phone"/>

            <EditText
                android:id="@+id/phone_edit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:hint="请输入手机号"
                android:maxLines="1"
                android:textColor="@color/textLight"
                android:textColorHint="@color/textLight"
                android:textSize="@dimen/app_text_size_medium"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <EditText
                android:id="@+id/edit_code"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:maxLines="1"
                android:hint="请输入验证码"
                android:paddingLeft="10dp"
                android:textSize="@dimen/app_text_size_medium"
                android:textColor="@color/textLight"
                android:textColorHint="@color/textLight"
                android:background="@drawable/shape"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/btn_get_code"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="获取验证码"
                android:layout_marginLeft="10dp"
                android:textColor="@color/md_white_1000"
                android:background="@drawable/button_orange"
                android:layout_weight="1"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:padding="10dp"
                android:src="@drawable/password"/>

            <EditText
                android:id="@+id/password_change"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:hint="请输入新密码"
                android:inputType="numberPassword"
                android:maxLines="1"
                android:textColor="@color/textLight"
                android:textColorHint="@color/textLight"
                android:textSize="@dimen/app_text_size_medium"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:padding="10dp"
                android:src="@drawable/password"/>

            <EditText
                android:id="@+id/password_change_secone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape"
                android:gravity="center"
                android:hint="请确认密码"
                android:maxLines="1"
                android:inputType="numberPassword"
                android:textColor="@color/textLight"
                android:textColorHint="@color/textLight"
                android:textSize="@dimen/app_text_size_medium"/>
        </FrameLayout>

        <Button
            android:id="@+id/save_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/button_orange"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:textColor="@color/md_white_1000"
            android:text="确定更改"
            android:textSize="@dimen/app_text_size_medium"/>

    </LinearLayout>
</layout>