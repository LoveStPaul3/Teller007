<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/md_blue_grey_50"
        tools:context="com.zxzhu.show.view.fragments.MineFragment"
        >

        <LinearLayout
            android:id="@+id/mine_data"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/md_white_1000"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/icon_mine"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:padding="5dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/textMid"
                    android:textSize="@dimen/app_text_size_large"/>

                <TextView
                    android:id="@+id/readme_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_vertical"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/textLight"
                    android:textSize="@dimen/app_text_size_small"/>
                    
            </LinearLayout>
            <ImageView
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/right_arror"/>
        </LinearLayout>


        <TextView
            android:id="@+id/about_me"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="与我相关"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:background="@color/md_white_1000"
            android:textSize="@dimen/app_text_size_medium"
            android:textColor="@color/textMid"/>

        <TextView
            android:id="@+id/change_data"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="修改资料"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/md_white_1000"
            android:textSize="@dimen/app_text_size_medium"
            android:textColor="@color/textMid"/>
        <TextView
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="修改密码"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:background="@color/md_white_1000"
            android:textSize="@dimen/app_text_size_medium"
            android:textColor="@color/textMid"/>


        <TextView
            android:id="@+id/opinion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="意见反馈"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:background="@color/md_white_1000"
            android:textSize="@dimen/app_text_size_medium"
            android:textColor="@color/textMid"/>
        <TextView
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="分享软件"
            android:gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:background="@color/md_white_1000"
            android:textSize="@dimen/app_text_size_medium"
            android:textColor="@color/textMid"/>
        <TextView
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="关于"
            android:gravity="center_vertical"
            android:layout_marginTop="1dp"
            android:paddingLeft="10dp"
            android:background="@color/md_white_1000"
            android:textSize="@dimen/app_text_size_medium"
            android:textColor="@color/textMid"/>

        <Button
            android:id="@+id/quiet"
            android:background="@drawable/button_orange"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/md_white_1000"
            android:textSize="@dimen/app_text_size_large"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="退出登录"/>

    </LinearLayout>
</layout>
